<Window x:Class="Logement.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Logement"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="" Height="500" Width="720"
        WindowState="Maximized"
        >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid VerticalAlignment="top">
            <StackPanel Orientation="Horizontal"  VerticalAlignment="Top" HorizontalAlignment="Left">

                <Button  Click="locatairesHandler" Foreground="BlueViolet" Style="{StaticResource IconButton}">
                    Locataires
                </Button>
                <!--<Button  Click="addHandler" Foreground="BlueViolet" Style="{StaticResource IconButton}">
                    Ajouter
                </Button>-->
                <!--<Menu>
                    <MenuItem HorizontalAlignment="Left">
                        <MenuItem.Header>
                            <WrapPanel VerticalAlignment="Top">
                                <TextBlock Text="Impression" Margin="0,0,10,0" />
                                <materialDesign:PackIcon Kind="Printer" />
                            </WrapPanel>
                        </MenuItem.Header>
                        <MenuItem Header="Etat de Reception" Click="EtatReception_Print_Click" MinWidth="135" />
                        <Separator />
                        <MenuItem Header="Etat de Livraison" Click="EtatLivraison_Print_Click" MinWidth="135" />
                        <Separator />
                        <MenuItem Header="Etat de Moteur" Click="EtatMoteur_Print_Click" MinWidth="135" />
                        <Separator />
                        <MenuItem Header="Etat de Installe" Click="EtatMoteurInstalle_Print_Click" MinWidth="135" />
                        <Separator />
                        <MenuItem Header="Etat de Depose" Click="EtatMoteurDepose_Print_Click" MinWidth="135" />
                    </MenuItem>
                </Menu>-->
            </StackPanel>

            <Button  VerticalAlignment="Center" Foreground="BlueViolet" HorizontalAlignment="Right"  Click="refresh" Style="{StaticResource IconButton}">
                <materialDesign:PackIcon Kind="Refresh" />
            </Button>
        </Grid>
        <StackPanel Grid.Row="1" HorizontalAlignment="Stretch">
            <!--<StackPanel Orientation="Horizontal">
                -->
            <!--<Button Margin="0,10" HorizontalAlignment="Center" Background="Transparent" BorderBrush="Transparent" Width="500" Height="100" Style="{StaticResource MaterialDesignFloatingActionDarkButton}">-->
            <!--
                <Image x:Name="photo" Stretch="Fill" Width="auto" Height="auto" MaxHeight="200" VerticalAlignment="Center" HorizontalAlignment="Center" />
                -->
            <!--</Button>-->
            <!--
            </StackPanel>-->
            <StackPanel HorizontalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <StackPanel Margin="10">
                        <Label Content="Grade"  FontWeight="Bold" FontSize="14" />
                        <CheckBox Name="gradecbTous" IsChecked="True" Click="gradecb_Click" Content="Tous" />
                        <CheckBox Name="gradecb1" Click="gradecb_Click" Content="PCE" />
                        <CheckBox Name="gradecb2" Click="gradecb_Click" Content="MILITAIRE" />
                        <CheckBox Name="gradecb3" Click="gradecb_Click" Content="PCA" />
                    </StackPanel>
                    <StackPanel Margin="10">
                        <Label Content="Etat de Locataire"  FontWeight="Bold" FontSize="14" />
                        <CheckBox Name="etat_locatairecbTous" IsChecked="True" Click="etat_locatairecb_Click" Content="Tous" />
                        <CheckBox Name="etat_locatairecb1" Click="etat_locatairecb_Click" Content="ACTIF" />
                        <CheckBox Name="etat_locatairecb2" Click="etat_locatairecb_Click" Content="DECEDE" />
                        <CheckBox Name="etat_locatairecb3" Click="etat_locatairecb_Click" Content="RETRAITE" />
                        <CheckBox Name="etat_locatairecb4" Click="etat_locatairecb_Click" Content="CMLD" />
                        <CheckBox Name="etat_locatairecb5" Click="etat_locatairecb_Click" Content="LICENCIE" />
                    </StackPanel>
                    <StackPanel Margin="10">
                        <Label Content="Nbr Piece"  FontWeight="Bold" FontSize="14" />
                        <CheckBox Name="type_logementcbTous" IsChecked="True" Click="type_logementcb_Click" Content="Tous" />
                        <CheckBox Name="type_logementcb1" Click="type_logementcb_Click" Content="1" />
                        <CheckBox Name="type_logementcb2" Click="type_logementcb_Click" Content="2" />
                        <CheckBox Name="type_logementcb3" Click="type_logementcb_Click" Content="3" />
                        <CheckBox Name="type_logementcb4" Click="type_logementcb_Click" Content="4" />
                        <CheckBox Name="type_logementcb5" Click="type_logementcb_Click" Content="5" />
                        <CheckBox Name="type_logementcb6" Click="type_logementcb_Click" Content="VILLA" />
                    </StackPanel>
                </StackPanel>
                <Button VerticalAlignment="Center" Click="refresh"  Foreground="BlueViolet" HorizontalAlignment="Center" Style="{StaticResource IconButton}">
                    <materialDesign:PackIcon Kind="Refresh" />
                </Button>
            </StackPanel>
            <Grid>
                <TextBox Name="filter" materialDesign:HintAssist.Hint="Recherche" TextChanged="recherche" CharacterCasing="Upper"
                     Width="200" HorizontalAlignment="Left" />

                <TextBlock Name="Total" Grid.Row="1" VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="-"
                   FontWeight="24" FontSize="24" Margin="25,5"
                   />
            </Grid>
        </StackPanel>
        <DataGrid Name="datagrid" Grid.Row="2" SelectionChanged="datagridSelectionChanged"  HorizontalAlignment="Stretch">
            <!--<DataGrid.Resources>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="listDataGridDbClick" />
                    </Style>
                </DataGrid.Resources>-->
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <!--<MenuItem Header="Éditer Locataire" Click="edit_locataire_click" />-->
                    <MenuItem Header="Éditer" Click="edit_appartement_click" />
                    <MenuItem Header="Vider" Click="vider_appartement_click" />
                    <MenuItem Header="Ajouter Locataire" Click="ajouter_locataire_click" />
                    <MenuItem Header="Historique" Click="historique_appartement_click" />
                    <MenuItem Header="Exporter(EXCEL)" Click="export_excel_item_click" />
                    <!--<MenuItem Header="Supprimer Fiche" Click="delete_appartement_click" />-->
                    <MenuItem Header="Imprimer la table" Click="imprimer_table_click" />
                </ContextMenu>
            </DataGrid.ContextMenu>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Visibility="Hidden" Binding="{Binding Path=id}"/>
                <DataGridTextColumn Header="Batiment" CanUserSort="False" Width="auto" Binding="{Binding Path=batiment}"/>
                <DataGridTextColumn Header="Porte" CanUserSort="False" Width="auto" Binding="{Binding Path=num_porte}"/>
                <DataGridTextColumn Header="Nbr Piece (F)" Width="auto" Binding="{Binding Path=nbr_piece}"/>
                <DataGridTextColumn Header="Id Locataire" Visibility="Hidden" Binding="{Binding Path=id_locataire}"/>
                <DataGridTextColumn Header="Nom  Prenom" Width="auto" Binding="{Binding Path=nom_complet}"/>
                <DataGridTextColumn Header="Matricule" Width="auto" Binding="{Binding Path=matricule}"/>
                <DataGridTextColumn Header="Grade" Width="auto" Binding="{Binding Path=grade}"/>
                <DataGridTextColumn Header="Etat" Width="auto" Binding="{Binding Path=etat_locataire}"/>
                <DataGridTextColumn Header="Position" Width="auto" Binding="{Binding Path=position}"/>
                <DataGridTextColumn Header="Charge" Width="auto" Binding="{Binding Path=charge,StringFormat=0.00}"/>
                <DataGridTextColumn Header="Date d'entrée" Width="auto" Binding="{Binding Path=date_entree,StringFormat=dd-MM-yyyy}"/>
                <DataGridTextColumn Header="Date de sortie" Width="auto" Binding="{Binding Path=date_sortie,StringFormat=dd-MM-yyyy}"/>
                <DataGridTextColumn Header="Observation" Width="auto" Binding="{Binding Path=observation}"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>

</Window>
